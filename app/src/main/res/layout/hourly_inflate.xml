<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/night"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.globalweatherapp.controls.TextViewMedium
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:text="30"
            android:id="@+id/hourly_label"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <com.example.globalweatherapp.controls.TextViewMedium
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="o"
            android:textSize="10sp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentTop="true"
            android:gravity="top"
            android:layout_toRightOf="@id/hourly_label"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/weather_icon_hourly"
        android:src="@mipmap/clear_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.example.globalweatherapp.controls.TextViewMedium
        android:id="@+id/time_hourly"
        android:layout_width="wrap_content"
        android:text="8.00"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>



</LinearLayout>